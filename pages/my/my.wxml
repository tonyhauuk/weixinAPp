
<!-- my.wxml -->
<view>
  <view class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
  <view class="inputStr">
    <view class="userName">
      <text>帐号</text>
      <input bindchange="userBind" placeholder="username" auto-focus/>
    </view>
    <view class="passwd">
      <text>密码 </text>
      <input bindchange="pwdBind" placeholder="password" password="true" auto-focus/>
    </view>
  </view>
</view>
<view class="btn">
  <view>
    <button type="primary" size="default" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="submit">登录</button>
  </view>
</view>